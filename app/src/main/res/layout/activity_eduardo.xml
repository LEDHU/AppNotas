<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    android:padding="16dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_eduardo"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/bio_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luís Eduardo Peixoto da Silva, tenho 21 anos, nasci e moro em Recife-PE. Tenho alguns irmaos e nao moro com nenhum deles. Formei-me em 2018 no Ensino Medio, entre esse tempo mudei de curso e de faculdade, antes fazia engenharia da computação. Atualmente estou no 5º periodo de Ciencia da Computação na UNICAP. Sou monitor da cadeira de Estrutura de Dados 1. Frequento curso de ginastica cerebral e de lingua, academia. Tenho um hobby de jogar online, gosto de Valorant."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onde me encontrar: "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_github"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @LEDHU"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_instagram"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @edupeixot0"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
