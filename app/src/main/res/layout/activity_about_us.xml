<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/grey"
    tools:context=".AboutUs">

    <EditText
        android:id="@+id/caixaDeTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="Sobre os desenvolvedores" />

    <ImageView
        android:id="@+id/arthur_ft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/ic_arthur" />

    <ImageView
        android:id="@+id/victor_ft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="115dp"
        android:src="@drawable/ic_victor" />

    <ImageView
        android:id="@+id/edu_ft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="230dp"
        android:src="@drawable/ic_eduardo" />

    <Button
        android:id="@+id/arthur_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/arthur_ft"
        android:layout_marginLeft="4dp"
        android:text="Arthur" />

    <Button
        android:id="@+id/victor_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/victor_ft"
        android:layout_marginLeft="115dp"
        android:text="Victor" />

    <Button
        android:id="@+id/eduardo_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edu_ft"
        android:layout_marginLeft="230dp"
        android:text="LuÃ­s" />

</RelativeLayout>