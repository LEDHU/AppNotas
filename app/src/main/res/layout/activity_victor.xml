<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353b3c"
    >

    <TextView
        android:id="@+id/caixaTexto"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:text="Victor Lopes"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_victor"
        android:layout_below="@id/caixaTexto"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="José Victor, tenho 24 anos, sou do sertão Pernambucano. Terminei o ensino médio em 2016, trabalhei com provedor de internet e hoje estudo na UNICAP. Com a ajuda da CEP(Casa do Estudante de Pernambuco), onde recebo moradia e alguns auxílios, estou conseguindo levar a diante o senho de me formar em ciência da computação."
        android:layout_toEndOf="@id/imagem"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_alignTop="@id/imagem"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Skills:"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/imagem"
        android:textSize="19sp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/front"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_front_novo"
        android:layout_below="@id/skills"
        android:layout_alignStart="@id/imagem"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/java"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/front"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_java" />

    <ImageView
        android:id="@+id/C"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_c"
        android:layout_below="@id/front"
        android:layout_marginStart="125dp" />

</RelativeLayout>
